<!--pages/allSmile/allSmile.wxml-->
<view class="head">
    <text>分享者登录</text>
</view>
<view class="img">
    <image src="https://7072-prod-9gy59jvo10e0946b-1310014865.tcb.qcloud.la/images/icon/logo.jpg?sign=9e263450ba69f243fccf5376e8c8db22&t=1648087908" mode="aspectFit"></image>
</view>
<view class="title">
    <text>A11 Smile</text>
</view>
<form  bindsubmit="formSubmit">
    <view class="input">
        <input name="email" value="{{email}}" placeholder="邮箱/账号" />
    </view>
    <view class="input">
        <input name="password" type="password" value="{{password}}" placeholder="密码" />
    </view>
    <view id="confirm">
        <button form-type="submit">登录</button>
    </view>
</form>



<view id="txt">
    <navigator url="/pages/user_register/user_register" open-type="navigate"><text>注册</text></navigator>
</view>