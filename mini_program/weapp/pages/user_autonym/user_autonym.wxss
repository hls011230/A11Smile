#background{
    width: 100%;
    height: 100%;
    background-size: 100% 100%;
    
}

#background image{
    width: 750rpx;
    border-bottom-right-radius: 70rpx;
    border-bottom-left-radius: 70rpx;
}

#title{
    text-align: center;
    margin-left: 100rpx;
    margin-right: 100rpx;
    height: 100rpx;
    font-size: x-large;
    font-weight: 800;
    color: #0096fffe;
    border-radius: 40rpx;
    border: 1rpx rgb(122, 120, 120) solid;
}

#txt{
    margin-top: 20rpx;
}

.img image{
    width: 380rpx;
    height: 240rpx;
}

#box{
    text-align: center;
    margin-top: 50rpx;
    color:  #AAAAAA;
    font-size: x-large;
    border: 1rpx #AAAAAA solid;
    margin-left: 80rpx;
    margin-right: 80rpx;
}

.item{
    margin-top: 50rpx;
}

#confirm button{
    width: 597rpx;
    background-color: #0c86efb0;
    color: white;
    border-radius: 40rpx;
    margin-top: 80rpx;
    margin-bottom: 50rpx;
}