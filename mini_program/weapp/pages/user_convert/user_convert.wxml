<view id="block">
    <view id="title">
        <text>AS兑换ETH</text>
    </view>
    <view id="mess">
        <view id="uname">
            <text>{{uname}}</text>
        </view>
    </view>

    <view id="input">
        <input type="number" placeholder="请输入需要兑换AS数量" value="{{eth}}" bindinput="getEth" />
    </view>
    <view id="pay">
        <view id="explain">
            <text>您将得到：</text>
        </view>
        <view id="eth">
            <text>{{eth/2}}ETH</text>
        </view>
        <view id="unit">
            <text>AS</text>
        </view>
    </view>
    <view id="topup">
            <button bindtap="asForEth">立即充值</button>
    </view>
</view>